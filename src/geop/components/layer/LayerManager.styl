#layermanager
  li
    position relative
    width: 250px
    cursor: pointer
    white-space: nowrap
    overflow: hidden
    &.dropdown-item.active,
    &.dropdown-item:active
      color: inherit
      text-decoration: none
      background-color: inherit
    .layer-tools
      position: absolute
      padding: 0.25rem 6px
      top: 0
      right: 0
      background: white
      a
        display: inline-block
        padding 0 3px
        color inherit

@media (min-width: 576px)
  .d-sm-block
    display: inline-block !important
