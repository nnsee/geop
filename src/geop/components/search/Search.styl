#search
  width 146px
  input
    border-color black
  .dropdown-header
    font-weight bold
    color #333
    background #ddd
    i
      margin-left -15px
  .fill-width.dropdown
    position static
    > .dropdown-menu
      left auto
      > li > a
        white-space normal

@media screen and (min-width: 360px)
  #search
    width 200px

@media screen and (min-width: 460px)
  #search
    width 240px
