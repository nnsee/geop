#bookmark
  li
    position relative
    width: 150px
    cursor: pointer
    white-space: nowrap
    overflow: hidden
    padding-left: 0.75rem
    &.dropdown-item.active,
    &.dropdown-item:active
      color: inherit
      text-decoration: none
      background-color: inherit
    .tools
      position: absolute
      padding: 0.25rem 6px
      top: 0
      right: 0
      background: white
      a
        display: inline-block
        padding 0 3px
        color inherit
