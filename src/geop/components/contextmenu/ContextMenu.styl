body .contextmenu
  filter: drop-shadow(0 1px 4px rgba(0,0,0,0.2))
  width: 180px
  z-index: 1000
  .arrow
    top: 8px!important
  .popover-body
    padding: 0
    user-select: auto
    .list-group-item
      cursor: pointer
      border-top: 1px solid #ddd
      border-left: none
      border-right: none
      border-bottom: none
      &:first-child
        border-top: none
      &:hover
        background-color: #eee
      i.gp-icon
        display: inline-block
        font: normal normal normal 14px/1 FontAwesome
        font-size: inherit
        text-rendering: auto
        -webkit-font-smoothing: antialiased
        &.gp-icon-ruler::before
          content: ''
          /*background: url("../img/icon-ruler.ico") no-repeat center*/
          display: block
          background-size: 1em
          width: 1em
          height: 1em
