#settings-sidebar
  width: 0
  height: 100vh
  position: fixed
  top: 0
  left: 0
  z-index: 999
  color white
  background: #000
  transition: 0.5s
  overflow-x: hidden
  &.active
    width: 350px
  .sidebar-header
    width 330px
    margin 10px
    button
      font-size 1.5em
      color white
  .sidebar-content
    margin 0 10px 10px
    width 330px

#settings-shadow
  display: none
  position: fixed
  top: 0
  left: 0
  width: 100vw
  height: 100vh
  background: rgba(0, 0, 0, 0.3)
  z-index: 998
  opacity: 0
  transition: all 0.5s ease-in-out
  &.active
    display: block
    opacity: 1
